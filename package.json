{
  "name": "portfolio",
  "version": "1.2.0",
  "private": true,
  "license": "MIT",
  "author": "ymkz",
  "homepage": "https://ymkz.co",
  "description": "The portfolio site about ymkz",
  "repository": {
    "type": "git",
    "url": "https://github.com/ymkz/portfolio"
  },
  "bugs": {
    "url": "https://github.com/ymkz/portfolio/issues"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "coverage": "react-scripts test --env=jsdom --coverage",
    "coverage:open": "open coverage/lcov-report/index.html",
    "coverage:report": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "coverage:coveralls": "run-s coverage coverage:report",
    "e2e": "testcafe chrome,firefox e2e --app 'yarn run start' --app-init-delay 5000",
    "lint": "run-p lint:*",
    "lint:js": "eslint 'src/**/*.js'",
    "lint:js:fix": "eslint --fix 'src/**/*.js'",
    "lint:css": "stylelint 'src/**/*.js'",
    "clean": "rimraf node_modules && yarn",
    "clean:cache": "rimraf node_modules && yarn cache clean && yarn"
  },
  "dependencies": {
    "formik": "0.11.10",
    "history": "4.7.2",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-alert": "3.1.3",
    "react-alert-template-basic": "1.0.0",
    "react-dom": "16.2.0",
    "react-medium-image-zoom": "3.0.10",
    "react-redux": "5.0.6",
    "react-router-dom": "4.2.2",
    "react-router-redux": "5.0.0-alpha.9",
    "react-scripts": "1.1.1",
    "react-transition-group": "2.2.1",
    "redux": "3.7.2",
    "styled-components": "3.1.6",
    "yup": "0.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.0",
    "@commitlint/config-conventional": "6.1.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "22.2.2",
    "coveralls": "3.0.0",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.17.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.6.1",
    "husky": "0.15.0-rc.8",
    "jest-styled-components": "4.11.0-1",
    "netlify-cli": "1.2.2",
    "npm-run-all": "4.1.2",
    "prettier": "^1.10.2",
    "react-test-renderer": "16.2.0",
    "rimraf": "2.6.2",
    "stylelint": "8.4.0",
    "stylelint-config-standard": "18.0.0",
    "stylelint-config-styled-components": "0.1.1",
    "stylelint-order": "0.8.0",
    "stylelint-processor-styled-components": "1.2.2",
    "testcafe": "0.18.6",
    "typescript": "2.7.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit $GIT_PARAMS",
      "pre-commit": "yarn run lint",
      "post-merge": "(git diff 'HEAD@{1}' --name-only | grep package.json > /dev/null) && yarn || :"
    }
  }
}
