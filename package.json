{
  "private": true,
  "version": "2.0.0",
  "name": "site",
  "license": "MIT",
  "author": "ymkz",
  "homepage": "https://ymkz.co",
  "description": "The portfolio site about ymkz",
  "repository": {
    "type": "git",
    "url": "https://github.com/ymkz/portfolio"
  },
  "bugs": {
    "url": "https://github.com/ymkz/portfolio/issues"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --coverage --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint --fix 'src/**/*.js'",
    "storybook": "start-storybook -p 9000 -s build",
    "storybook:build": "build-storybook -s build"
  },
  "dependencies": {
    "formik": "0.11.11",
    "medium-zoom": "0.4.0",
    "react": "16.3.0",
    "react-dom": "16.3.0",
    "react-router-dom": "4.2.2",
    "react-scripts": "1.1.1",
    "styled-components": "3.2.3",
    "yup": "0.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "@storybook/addon-actions": "3.4.0",
    "@storybook/addon-links": "3.4.0",
    "@storybook/addon-storyshots": "3.3.15",
    "@storybook/addons": "3.4.0",
    "@storybook/react": "3.3.15",
    "babel-core": "6.26.0",
    "babel-eslint": "8.2.2",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.7.0",
    "husky": "0.15.0-rc.13",
    "jest": "22.4.3",
    "jest-enzyme": "6.0.0",
    "jest-styled-components": "5.0.0",
    "prettier": "1.11.1",
    "react-test-renderer": "16.3.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/**/*.js",
      "!<rootDir>/src/components/index.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --edit $GIT_PARAMS",
      "pre-commit": "yarn run lint",
      "post-merge": "(git diff 'HEAD@{1}' --name-only | grep package.json > /dev/null) && yarn || :"
    }
  }
}
